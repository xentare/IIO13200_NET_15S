        <TextBox x:Name="windowHeight" HorizontalAlignment="Left" Height="23" Margin="425,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="82"/>
        <Label x:Name="label1" Content="Ikkunan korkeus (H):" HorizontalAlignment="Left" Margin="289,38,0,0" VerticalAlignment="Top" Width="136"/>
        <TextBox x:Name="frameWidth" HorizontalAlignment="Left" Height="23" Margin="425,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="82"/>
        <Label x:Name="label2" Content="Karmipuun leveys (W):" HorizontalAlignment="Left" Margin="289,66,0,0" VerticalAlignment="Top"/>
        <Button x:Name="calculate" Content="Calculate" HorizontalAlignment="Left" Margin="343,119,0,0" VerticalAlignment="Top" Width="118" Click="button_Click"/>
        <Label x:Name="label3" Content="Ikkunan pinta-ala:" HorizontalAlignment="Left" Margin="289,159,0,0" VerticalAlignment="Top" Width="116"/>
        <Label x:Name="label4" Content="Karmin piiri:" HorizontalAlignment="Left" Margin="289,218,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label5" Content="Karmin pinta-ala:" HorizontalAlignment="Left" Margin="289,249,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.469,0.507"/>
        <TextBlock x:Name="windowArea" HorizontalAlignment="Left" Margin="411,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="87"/>
        <TextBlock x:Name="frameRing" HorizontalAlignment="Left" Margin="411,223,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="87"/>
        <TextBlock x:Name="frameArea" HorizontalAlignment="Left" Margin="411,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="87"/>

    </Grid>
</Window>
